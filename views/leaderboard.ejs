<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leaderboard</title>
    <link rel="icon" href="/assets/icon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer
    ></script>
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin="crossorigin"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body onload="init()">
    <nav
      class="flex flex-col md:flex-row justify-between md:px-10 py-[14px] md:py-5 text-sm fixed top-0 inset-x-0 md:border-none bg-[#121019] border-b-[0.8px] border-slate-400"
      x-data="{ open: false }"
      :class="{'border-slate-400': open, ' border-transparent': !open}"
    >
      <div
        class="flex flex-row justify-between items-center px-6 w-full md:w-auto md:px-0"
      >
        <p>
          <% if( username != null) { %> Welcome,
          <span class="text-[#98ABBD]"><%= username %>.</span> <% } %>
        </p>
        <button
          class="rounded-lg md:hidden focus:outline-none focus:shadow-outline"
          @click="open = !open"
        >
          <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
            <path
              x-show="!open"
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
              clip-rule="evenodd"
            ></path>
            <path
              x-show="open"
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </button>
      </div>
      <div
        :class="{'max-h-[170px] pb-5': open, 'max-h-0 mt-0': !open}"
        class="gap-7 gap-y-4 mt-5 ease duration-300 px-6 md:pb-0 md:px-0 md:border-none md:mt-0 md:max-h-fit md:bg-transparent max-h-0 pb-0 overflow-hidden flex-col flex-grow flex md:flex md:h-auto md:flex-row md:justify-end"
      >
        <a class="hover:text-cyan-300" href="/">About</a>
        <a class="hover:text-cyan-300" href="/rules">Rules</a>
        <a class="hover:text-cyan-300" href="/play">Play</a>
        <a class="text-cyan-300" href="/leaderboard">Leaderboard</a>
        <% if( username != null) { %>
        <a class="hover:text-cyan-300" href="/auth/logout">Log Out</a>
        <% } else { %>
        <a class="hover:text-cyan-300" href="/auth/login">Log In</a>
        <% } %>
      </div>
    </nav>
    <h1 class="text-center mt-16 md:mt-20 text-lg md:text-xl">Leaderboard</h1>
    <table
      class="w-[90%] md:w-[80%] m-auto border-collapse table-fixed mt-5 mb-10"
    >
      <thead>
        <tr class="font-light bg-neutral-700 text-md text-slate-300">
          <th class="py-2 w-1/4 font-normal">Rank</th>
          <th class="py-2 w-2/4 font-normal">Username</th>
          <th class="py-2 font-normal">Level</th>
        </tr>
      </thead>
      <tbody class="text-sm">
        <% for(var i=0; i<leaderboard.length; i++) { if(i%2==0) {%>
        <tr class="text-center text-white">
          <% }else {%>
        </tr>
        <tr class="text-center text-white bg-slate-800">
          <% } %>
          <td class="py-3"><%= i+1 %></td>
          <td class="py-3"><%= leaderboard[i][0] %></td>
          <td class="py-3"><%= leaderboard[i][1] %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <script>
      function init() {
        if (window.scrollY > 10) {
          document.querySelector("nav").classList.remove("border-transparent");
          document.querySelector("nav").classList.add("border-slate-400");
        }
      }
      document.addEventListener("scroll", (event) => {
        if (window.scrollY > 10) {
          document.querySelector("nav").classList.remove("border-transparent");
          document.querySelector("nav").classList.add("border-slate-400");
        } else {
          document.querySelector("nav").classList.add("border-transparent");
          document.querySelector("nav").classList.remove("border-slate-400");
        }
      });
    </script>
  </body>
</html>
